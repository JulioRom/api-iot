{
  "id": null,
  "uid": null,
  "title": "PostgreSQL Metrics",
  "tags": [
    "postgres",
    "database",
    "prometheus"
  ],
  "timezone": "browser",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "graph",
      "title": "Database Connections",
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "Connections",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "type": "graph",
      "title": "Database Size",
      "targets": [
        {
          "expr": "pg_database_size_bytes",
          "legendFormat": "{{datname}} size",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "graph",
      "title": "Deadlocks",
      "targets": [
        {
          "expr": "pg_stat_database_deadlocks",
          "legendFormat": "{{datname}} deadlocks",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 9,
        "w": 24,
        "x": 0,
        "y": 9
      }
    }
  ]
}